<Window x:Class="HabitTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Трекер Привычек" Height="500" Width="800" WindowState="Maximized"
        Background="#DFFFD6">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Мои Привычки" FontSize="34" FontWeight="Bold" Foreground="Black"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Список привычек с прокруткой -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ListView Name="HabitListView" Background="White"
                      BorderBrush="Gray" BorderThickness="1"
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                      FontSize="18" Margin="0,0,5,0">
                <!-- Добавлен небольшой отступ справа -->
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name}" Width="200"/>
                        <GridViewColumn Header="Дата начала" Width="180">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding StartDate, StringFormat='dd.MM.yyyy HH:mm'}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding Description}" Width="250"/>
                        <GridViewColumn Header="Прогресс" DisplayMemberBinding="{Binding CompletedDays}" Width="100"/>

                        <!-- Отображение списка напоминаний -->
                        <GridViewColumn Header="Напоминания" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding ShortReminders}" TextWrapping="Wrap" />
                                        <Button Content="↓" Visibility="{Binding ShowMoreButtonVisibility}"
                                                Click="ShowMoreReminders_Click"
                                                FontSize="14" Padding="2" Cursor="Hand"
                                                Background="Transparent" BorderThickness="0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </ScrollViewer>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,10,0,0">

            <!-- Кнопка "Добавить" -->
            <Button Content="Добавить" Height="50" Click="AddHabit_Click"
                    Background="#4CAF50" Foreground="White" FontSize="18"
                    Margin="10" Padding="5" BorderThickness="0" Cursor="Hand"
                    HorizontalAlignment="Stretch">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Кнопка "Редактировать" -->
            <Button Content="Редактировать" Height="50" Click="EditHabit_Click"
                    Background="#FFB300" Foreground="White" FontSize="18"
                    Margin="10" Padding="5" BorderThickness="0" Cursor="Hand"
                    HorizontalAlignment="Stretch">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Кнопка "Удалить" -->
            <Button Content="Удалить" Height="50" Click="DeleteHabit_Click"
                    Background="#D32F2F" Foreground="White" FontSize="18"
                    Margin="10" Padding="5" BorderThickness="0" Cursor="Hand"
                    HorizontalAlignment="Stretch">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Кнопка "Отметить выполнение" -->
            <Button Content="Отметить выполнение" Height="50" Click="MarkHabitCompleted_Click"
                    Background="#388E3C" Foreground="White" FontSize="18"
                    BorderThickness="0" Cursor="Hand"
                    HorizontalAlignment="Stretch"
                    Margin="10">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Кнопка "Аналитика" -->
            <Button Content="Аналитика" Width="200" Height="50"
                    Click="OpenAnalytics_Click"
                    Background="#1976D2" Foreground="White" FontSize="18"
                    BorderThickness="0" Cursor="Hand"
                    Margin="10">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
